<div id="edit-post-form">
    <div id='edit-post-header'>
        <header><h1>Edit Post</h1></header>
    </div>
    <form>
        <label for="title">Title</label>
        <input type="text" id="title" value="{{post.title}}">
        <label for="content">Content</label>
        <input type="text" id="content" value="{{post.content}}">
        <button type="submit" id="edit-post" data-postid="{{post.id}}">Edit</button>
        <button type="submit" id="delete-post" data-postid="{{post.id}}">Delete</button>
    </form>
</div>

<script src="/js/editPost.js"></script>